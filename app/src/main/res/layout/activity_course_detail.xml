<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseDetail">

    <TextView
        android:id="@+id/courseName"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="251dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="378dp"
        android:text="Course Name"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="431dp"
        tools:srcCompat="@drawable/d2" />

    <TextView
        android:id="@+id/author"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/courseName"
        android:layout_alignTop="@+id/courseName"
        android:layout_alignEnd="@+id/courseName"
        android:layout_alignBottom="@+id/courseName"
        android:layout_marginStart="1dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="-31dp"
        android:text="TextView"
        android:textColor="#000000" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/enroll"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/author"
        android:layout_alignTop="@+id/author"
        android:layout_alignEnd="@+id/author"
        android:layout_alignBottom="@+id/author"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="232dp"
        android:layout_marginBottom="-56dp"
        android:text="Enroll"
        app:backgroundTint="#272B7C"
        app:cornerRadius="20sp" />

</RelativeLayout>